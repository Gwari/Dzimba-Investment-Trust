<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/house_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        android:clickable="true">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:id="@+id/dzimba_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/house_height"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="fitXY"/>
            
            <TextView
                android:id="@+id/houseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dzimba_thumbnail"
                android:paddingLeft="@dimen/house_title_padding"
                android:paddingRight="@dimen/house_title_padding"
                android:paddingTop="@dimen/house_title_padding"
                android:textColor="@color/house_title"
                android:textSize="@dimen/house_title"/>

            <TextView
                android:id="@+id/city_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/houseTitle"
                android:paddingLeft="@dimen/house_title_padding"
                android:paddingRight="@dimen/house_title_padding"
                android:paddingTop="@dimen/house_title_padding"
                android:textColor="@color/house_title"
                android:textSize="@dimen/house_title"/>

            <TextView
                android:id="@+id/bedCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_location"
                android:paddingRight="@dimen/house_title_padding"
                android:paddingLeft="@dimen/house_title_padding"
                android:paddingBottom="@dimen/house_count_padding_bottom"
                android:textSize="@dimen/house_count"/>

            <ImageView
                android:id="@+id/overflow"
                android:layout_width="@dimen/ic_album_overflow_width"
                android:layout_height="@dimen/ic_album_overflow_height"
                android:layout_alignParentRight="true"
                android:layout_below="@id/dzimba_thumbnail"
                android:layout_marginTop="@dimen/ic_album_overflow_margin_top"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_dots" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>