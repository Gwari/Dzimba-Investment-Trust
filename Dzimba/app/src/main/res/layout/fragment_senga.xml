<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/SengaRoomView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/sengabedroom"/>

            <TextView
                android:id="@+id/sengaHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/LangaraRoomView"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="@string/SengaHouseGweru"
                android:textColor="#0B342D"
                android:textSize="25sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="7"
                android:lineSpacingExtra="5dp"
                android:layout_marginLeft="8dp"
                android:text="@string/SengaFacility"
                android:textSize="15sp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>